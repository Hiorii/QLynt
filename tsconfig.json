{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["chrome"],
    "outDir": "dist",
    "rootDir": "extensions/src",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false
  },
  "include": ["extensions/src/**/*.ts", "extensions/src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
